<div class="container">
  <div class="row">
    <h1 class="col s12">Log In!</h1>
  </div>
  <div class="row">  
    <p id="alert" class="col s12"><%= alert %></p>
  </div>
  <div class="row">
    <%= form_tag sessions_path, class: "col s12" do %>
      <div class="row">
        <div class="input-field col s12">
        <%= text_field_tag :email, params[:email] %>
        <%= label_tag :email %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <%= password_field_tag :password %>
        <%= label_tag :password %>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <button class="btn-large waves-effect waves-light" type="submit" name="action">Log In</button>
        </div>
      </div>
    <% end %>
  </div>
</div>