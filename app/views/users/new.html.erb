<div class="container">
  <div class="row">
    <h1>Sign Up!</h1>
  </div>
  <div class="row">    
    <%= form_for @user, html: { multipart: true }, class: "col s12" do |f| %>
      <div class="row">
        <% if @user.errors.any? %>
          <div class="error_messages col s12">
            <ul>
              <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="input-field col s6">
        <%= f.text_field :first_name %>
        <%= f.label :first_name %>
        </div>
        <div class="input-field col s6">
        <%= f.text_field :last_name %>
        <%= f.label :last_name %>
        </div>
      </div> 
      <div class="row">
        <div class="input-field col s12">
        <%= f.text_field :email %>
        <%= f.label :email %>
        </div>
      </div> 
      <div class="row">
        <div class="input-field col s12">
        <%= f.password_field :password %>
        <%= f.label :password %>
        </div>
      </div> 
      <div class="row">
        <div class="input-field col s12">
        <%= f.password_field :password_confirmation %>
        <%= f.label :password_confirmation %>
        </div>
      </div>
      <div class="row">
        <div class="input-field file-field col s12">
          <div class="btn">
            <span>Profile Photo</span>
            <%= f.file_field :image %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text" placeholder="Upload a profile photo">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <button class="btn-large waves-effect waves-light" type="submit" name="action">Sign Up
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
    <% end %> 
  </div>
</div>